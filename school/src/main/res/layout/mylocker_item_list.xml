<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginBottom="8dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="#C5CAE9"
    android:foreground="?attr/selectableItemBackground"
    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
    <RelativeLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

        <TextView
            android:id="@+id/loc_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="Science Quiz "
            android:textColor="#000000"
            android:textStyle="bold"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textSize="16sp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/loc_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="09/05/2016"
            android:textColor="#000000"
            android:gravity="end"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textSize="14sp"
            android:layout_weight="1"/>

        </LinearLayout>



        <LinearLayout
            android:layout_below="@+id/ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



            <TextView
                android:id="@+id/loc_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginLeft="16dp"
                android:layout_marginTop="15dp"
                android:textColor="#000000"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="Certificate"
                android:textAppearance="?attr/textAppearanceListItem"
                android:textSize="14sp" />

        <TextView
            android:id="@+id/loc_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="5dp"
            android:layout_marginLeft="16dp"
            android:textColor="#000000"


            android:text="awarded by NSTSE Certificate"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/loc_tag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginLeft="16dp"
            android:textColor="#000000"

            android:text="#Ist Prize"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textSize="14sp" />

        </LinearLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>